    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        },
        {
            "name": "train_bev_model.py configs/nuscenes_lss_evidential_vehicle.yaml",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/train_bev_model.py",
            "console": "integratedTerminal",
            "args": [
                "configs/nuscenes_lss_evidential_vehicle.yaml",
                "-g",
                "0"
            ]
        },
        {
            "name": "train_bev_topk_model.py configs/carla_lss_baseline_topk_vehicle.yaml",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/train_bev_topk_model.py",
            "console": "integratedTerminal",
            "args": [
                "configs/carla_lss_baseline_topk_vehicle.yaml",
                "-g",
                "1", "2"
            ]
        },
    ]
}